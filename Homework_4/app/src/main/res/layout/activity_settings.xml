<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SettingsActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/editTextNewsFeedUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/news_feed_url_hint"
            android:inputType="textUri" />

        <CheckBox
            android:id="@+id/checkBoxShowImages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_images" />

        <CheckBox
            android:id="@+id/checkBoxDownloadImages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/download_images" />

        <Button
            android:id="@+id/btnApplySettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply_settings" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>